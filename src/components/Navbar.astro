---
import { Image } from "astro:assets";

import EleverLogo from "../assets/SVG/im_elever_logo.svg";
---

<header class="hidden lg:block">
  <nav
    class="mx-auto flex max-w-[90rem] items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Your Company</span>
        <Image class="h-8 w-auto" src={EleverLogo} alt="" />
      </a>
    </div>
    <div class="flex lg:hidden">
      <button
        type="button"
        class="text-gray-700 -m-2.5 inline-flex items-center justify-center rounded-md p-2.5"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a
        href="#"
        class="text-gray-900 border-b-2 border-green-bright text-sm leading-8"
      >
        Elever App
      </a>
      <a
        href="#"
        class="text-gray-900 border-b-2 border-transparent text-sm leading-8"
      >
        Modules
      </a>
      <a
        href="#"
        class="text-gray-900 border-b-2 border-transparent text-sm leading-8"
      >
        Use cases
      </a>
      <a
        href="#"
        class="text-gray-900 border-b-2 border-transparent text-sm leading-8"
      >
        Login
      </a>
      <a
        href="#"
        class="text-gray-900 inline-flex items-center justify-center gap-x-1.5 text-sm leading-8"
      >
        EN
        <!-- Chevron down -->
        <svg
          width="14"
          height="9"
          viewBox="0 0 14 9"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M13.2949 1.61426C13.4414 1.73145 13.4414 1.96582 13.2949 2.1123L7.17188 8.23535C7.02539 8.38184 6.82031 8.38184 6.67383 8.23535L0.550781 2.1123C0.404297 1.96582 0.404297 1.73145 0.550781 1.61426L1.10742 1.02832C1.25391 0.881836 1.48828 0.881836 1.60547 1.02832L6.9375 6.33105L12.2402 1.02832C12.3574 0.881836 12.5918 0.881836 12.7383 1.02832L13.2949 1.61426Z"
            fill="white"></path>
        </svg>
      </a>
    </div>
  </nav>
</header>
