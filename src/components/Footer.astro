---
import { Image } from "astro:assets";
import ContactForm from "../components/ContactForm.astro";
import germanContent from "../contents/de/footer.ts";
import englishContent from "../contents/en/footer.ts";

import AltusForgeLogo from "../assets/AF Logo.svg";
import PlaneGuys from "../assets/SVG/im_contact.svg";
import Divider from "./Divider.astro";

interface Props {
  lang: "de" | "en";
}
const { lang } = Astro.props;

const content = lang === "en" ? englishContent : germanContent;
---

<footer
  class="bg-gradient-to-b from-background to-[#122722] px-14 py-10 lg:py-20"
>
  <div class="mx-auto max-w-7xl">
    <div class="mx-auto max-w-3xl">
      <h2 class="text-center text-xs uppercase lg:text-2xl">
        {content.contact.title}
      </h2>
      <h3
        class="mt-6 text-center text-5xl font-semibold text-green-neon lg:text-8xl"
      >
        {content.contact.subtitle}
      </h3>
      <div class="mx-auto mt-6 w-24 lg:mt-14 lg:w-40">
        <svg viewBox="0 0 95 23" fill="none" xmlns="http://www.w3.org/2000/svg">
          <g opacity="0.5">
            <path
              d="M11.6504 22.059C11.6504 22.059 15.3203 11.5825 26.1629 11.4063C37.0055 11.0583 33.1548 17.8648 44.5216 16.8207C55.8885 15.7722 51.6897 3.02692 69.5242 0.233803C87.3586 -2.38757 94.8793 22.059 94.8793 22.059H11.6504Z"
              fill="#05FF00"></path>
          </g>
          <path
            d="M0.121094 11.5588C0.121094 11.5588 1.96058 6.31156 7.38413 6.22569C12.8077 6.04943 10.8823 9.46173 16.568 8.93745C22.2537 8.41318 20.1566 2.02698 29.0783 0.630421C38.0001 -0.680264 41.7649 11.5633 41.7649 11.5633H0.121094V11.5588Z"
            fill="#44AD8D"></path>
        </svg>
      </div>
      <Divider class="mt-6 lg:mb-14 lg:mt-20" />
      <div id="contact-form" class="text-sm leading-loose lg:text-lg">
        {
          content.contact.description.map((paragraph) => (
            <p class="mt-4">{paragraph}</p>
          ))
        }
      </div>
      <div class="mt-10 lg:mt-16">
        <ContactForm content={content.contact} {lang} />
      </div>
      <Image
        class="mx-auto mt-20 w-full max-w-96 lg:mt-36"
        src={PlaneGuys}
        alt="Illustration of people flying in a paper plane."
      />
    </div>
    <div class="mt-14">
      <span class="text-xl">{content.footer.productBy}</span>
    </div>
    <Image class="mt-5" src={AltusForgeLogo} alt="Altus Forge logo" />
    <address class="mt-16 text-sm leading-relaxed lg:text-lg">
      {
        content.footer.address.map((line) => (
          <>
            {line}
            <br />
          </>
        ))
      }
    </address>
    <div class="mt-3">
      <a class="text-3xl text-cyan" href="https://altusforge.com"
        >altusforge.com</a
      >
    </div>
  </div>
</footer>
