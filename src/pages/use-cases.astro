---
import { Image } from "astro:assets";

import Navbar from "../components/Navbar.astro";
import defaultContent from "../contents/de/use-cases.ts";

import LeadershipTraining from "../assets/use-cases/im_thumb_01.png";
import VocationalTraining from "../assets/use-cases/im_thumb_02.png";
import University from "../assets/use-cases/im_thumb_03.png";
import BottomIllustration from "../assets/use-cases/im_use_cases_bottom.svg";
import HeroIllustration from "../assets/use-cases/im_use_cases_top.svg";
import Divider from "../components/Divider.astro";
import Footer from "../components/Footer.astro";
import type { Content } from "../contents/types/use-cases";

interface Props {
  lang: "en" | "de";
  content: Content;
}
const {
  lang = (Astro.currentLocale ?? "de") as "de" | "en",
  content = defaultContent,
} = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{content.title}</title>
  </head>
  <body class="w-full bg-background text-white">
    <Navbar class="bg-[#33107E]" currentPage="/use-cases" lang={lang} />
    <section class="bg-[#33107E] px-7 pb-4 pt-16">
      <div class="mx-auto max-w-7xl">
        <div class="px-7">
          <h1 class="text-5xl font-semibold lg:text-8xl">{content.title}</h1>
          <p
            class="mx-auto mt-8 max-w-prose text-sm leading-6 lg:mt-20 lg:text-2xl"
          >
            {content.description}
          </p>
        </div>
        <Image
          class="mx-auto mt-8 w-full max-w-5xl"
          src={HeroIllustration}
          alt=""
        />
      </div>
    </section>
    <section class="bg-[#33107E] px-14 pb-10 pt-4 lg:pb-14">
      <div class="mx-auto max-w-7xl items-start lg:flex lg:gap-x-12">
        <Image
          class="mx-auto lg:mx-0 lg:h-auto lg:w-full lg:flex-1"
          src={LeadershipTraining}
          widths={[256, 616, 970, 1232, 1410, 1580, 1721]}
          sizes="(min-width: 1480px) 616px, (min-width: 1024px) 42vw, calc(100vw - 112px)"
          alt=""
        />
        <div class="lg:flex-1">
          <h2 class="mt-8 flex items-center gap-x-2">
            <div class="text-6xl font-semibold lg:text-8xl">1</div>
            <span class="w-full text-xl lg:text-4xl">
              {content.leadershipTraining.title}
            </span>
          </h2>
          <Divider class="my-10" />
          <h3 class="text-xl font-semibold">
            {content.sectionLabels.participants}
          </h3>
          <p class="mt-3 text-sm leading-6 lg:text-base">
            {content.leadershipTraining.participants}
          </p>
          <h3 class="mt-7 text-xl font-semibold">
            {content.sectionLabels.modules}
          </h3>
          <ul class="mt-3 text-sm leading-6 lg:text-base">
            {
              content.leadershipTraining.modules.map((module) => (
                <li>{module}</li>
              ))
            }
          </ul>
          <h3 class="mt-8 text-xl font-semibold">
            {content.sectionLabels.results}
          </h3>
          <p class="mt-3 text-sm leading-6 lg:text-base">
            {content.leadershipTraining.results}
          </p>
          <div class="mt-7 lg:mt-12">
            <a href="/use-cases/Elever_UC01.pdf" download>
              <div
                class="flex items-center justify-center gap-x-2 rounded-lg border border-white px-8 py-4 text-sm font-medium lg:max-w-48"
              >
                <span>{content.sectionLabels.fullUsecaseButton}</span>

                <!-- Chevron Right-->
                <svg
                  width="7"
                  height="13"
                  viewBox="0 0 7 13"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M0.609375 1.11523C0.736328 0.988281 0.914062 0.988281 1.04102 1.11523L6.37305 6.42188C6.47461 6.54883 6.47461 6.72656 6.37305 6.85352L1.04102 12.1602C0.914062 12.2871 0.736328 12.2871 0.609375 12.1602L0.101562 11.6777C0 11.5508 0 11.3477 0.101562 11.2461L4.69727 6.625L0.101562 2.0293C0 1.92773 0 1.72461 0.101562 1.59766L0.609375 1.11523Z"
                    fill="white"></path>
                </svg>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>
    <section class="bg-[#05534B] px-14 py-10 lg:py-24">
      <div
        class="mx-auto max-w-7xl items-start lg:flex lg:flex-row-reverse lg:gap-x-12"
      >
        <Image
          class="mx-auto lg:mx-0 lg:mt-36 lg:h-auto lg:w-full lg:flex-1"
          src={VocationalTraining}
          widths={[256, 616, 970, 1232, 1410, 1580, 1721]}
          sizes="(min-width: 1480px) 616px, (min-width: 1024px) 42vw, calc(100vw - 112px)"
          alt=""
        />
        <div class="lg:flex-1">
          <h2 class="mt-10 flex items-center gap-x-2">
            <div class="text-6xl font-semibold lg:text-8xl">2</div>
            <div class="w-full text-xl lg:text-4xl">
              {content.vocationalTraining.title}
            </div>
          </h2>
          <Divider class="my-10" />
          <p class="text-xl font-semibold">
            {content.vocationalTraining.description}
          </p>
          <p class="mt-5 text-xl font-semibold">
            A) {content.vocationalTraining.A.title}
          </p>
          <h3 class="mt-5 text-xl font-semibold">
            {content.sectionLabels.participants}
          </h3>
          <p class="mt-3 text-sm leading-6 lg:text-base">
            {content.vocationalTraining.A.participants}
          </p>
          <h3 class="mt-7 text-xl font-semibold">
            {content.sectionLabels.modules}
          </h3>
          <ul class="mt-3 text-sm leading-6 lg:text-base">
            {
              content.vocationalTraining.A.modules.map((module) => (
                <li>{module}</li>
              ))
            }
          </ul>
          <h3 class="mt-7 text-xl font-semibold">
            {content.sectionLabels.results}
          </h3>
          <p class="mt-3 text-sm leading-6 lg:text-base">
            {content.vocationalTraining.A.results}
          </p>
          <Divider class="my-10" />
          <p class="text-xl font-semibold">
            B) {content.vocationalTraining.B.title}
          </p>
          <h3 class="mt-5 text-xl font-semibold">
            {content.sectionLabels.participants}
          </h3>
          <p class="mt-3 text-sm">
            {content.vocationalTraining.B.participants}
          </p>
          <h3 class="mt-7 text-xl font-semibold">
            {content.sectionLabels.modules}
          </h3>
          <ul class="mt-3 text-sm leading-6">
            {
              content.vocationalTraining.B.modules.map((module) => (
                <li>{module}</li>
              ))
            }
          </ul>
          <h3 class="mt-7 text-xl font-semibold">
            {content.sectionLabels.results}
          </h3>
          <p class="mt-3 text-sm leading-6">
            {content.vocationalTraining.B.results}
          </p>
          <div class="mt-7 lg:mt-12">
            <a href="/use-cases/Elever_UC02.pdf" download>
              <div
                class="flex items-center justify-center gap-x-2 rounded-lg border border-white px-8 py-4 text-sm font-medium lg:max-w-48"
              >
                <span>{content.sectionLabels.fullUsecaseButton}</span>

                <!-- Chevron Right-->
                <svg
                  width="7"
                  height="13"
                  viewBox="0 0 7 13"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M0.609375 1.11523C0.736328 0.988281 0.914062 0.988281 1.04102 1.11523L6.37305 6.42188C6.47461 6.54883 6.47461 6.72656 6.37305 6.85352L1.04102 12.1602C0.914062 12.2871 0.736328 12.2871 0.609375 12.1602L0.101562 11.6777C0 11.5508 0 11.3477 0.101562 11.2461L4.69727 6.625L0.101562 2.0293C0 1.92773 0 1.72461 0.101562 1.59766L0.609375 1.11523Z"
                    fill="white"></path>
                </svg>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>
    <section class="bg-[#046087] px-4 py-10">
      <div class="mx-auto max-w-7xl items-start px-10 lg:flex lg:gap-x-12">
        <Image
          src={University}
          class="mx-auto lg:mx-0 lg:h-auto lg:w-full lg:flex-1"
          alt=""
          widths={[256, 616, 970, 1232, 1410, 1580, 1721]}
          sizes="(min-width: 1480px) 616px, (min-width: 1024px) 42vw, calc(100vw - 112px)"
        />
        <div class="flex-1">
          <h2 class="mt-10 flex items-center gap-x-2">
            <div class="text-6xl font-semibold lg:text-8xl">3</div>
            <div class="w-full text-xl lg:text-4xl">
              {content.university.title}
            </div>
          </h2>
          <Divider class="my-10" />
          <h3 class="text-xl font-semibold">
            {content.sectionLabels.participants}
          </h3>
          <p class="mt-3 text-sm leading-6 lg:text-base">
            {content.university.participants}
          </p>
          <h3 class="mt-7 text-xl font-semibold">
            {content.sectionLabels.modules}
          </h3>
          <ul class="mt-3 text-sm leading-6 lg:text-base">
            {content.university.modules.map((module) => <li>{module}</li>)}
          </ul>
          <h3 class="mt-7 text-xl font-semibold">
            {content.sectionLabels.results}
          </h3>
          <p class="mt-3 text-sm leading-6 lg:text-base">
            {content.university.results}
          </p>
          <div class="mt-7 lg:mt-12">
            <a href="/use-cases/Elever_UC03.pdf" download>
              <div
                class="flex items-center justify-center gap-x-2 rounded-lg border border-white px-8 py-4 text-sm font-medium lg:max-w-48"
              >
                <span>{content.sectionLabels.fullUsecaseButton}</span>

                <!-- Chevron Right-->
                <svg
                  width="7"
                  height="13"
                  viewBox="0 0 7 13"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M0.609375 1.11523C0.736328 0.988281 0.914062 0.988281 1.04102 1.11523L6.37305 6.42188C6.47461 6.54883 6.47461 6.72656 6.37305 6.85352L1.04102 12.1602C0.914062 12.2871 0.736328 12.2871 0.609375 12.1602L0.101562 11.6777C0 11.5508 0 11.3477 0.101562 11.2461L4.69727 6.625L0.101562 2.0293C0 1.92773 0 1.72461 0.101562 1.59766L0.609375 1.11523Z"
                    fill="white"></path>
                </svg>
              </div>
            </a>
          </div>
        </div>
      </div>

      <Image
        class="mx-auto mt-10 w-full max-w-4xl"
        src={BottomIllustration}
        alt=""
      />
    </section>
    <Footer lang={lang} />
  </body>
</html>
